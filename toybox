#!/bin/sh

usage() {
    echo "usage: `basename $0` [-i toy ... | -u toy ...] ..."
    exit 1
}

start_toybox_install() (
    echo $1

    t="$1/.toybox/toybox.conf"

    if [[ ! -f "$t" ]]; then
        echo "-----> not a toy"
        exit 2
    fi

    (. "$t" && cd -P "$1" && toybox_install "$1")
)

start_toybox_uninstall() (
    echo $1

    t="$1/.toybox/toybox.conf"

    if [[ ! -f "$t" ]]; then
        echo "-----> not a toy"
        exit 3
    fi

    (. "$t" && cd -P "$1" && toybox_uninstall "$1")
)

start() {
    if [[ $# = 0 ]]; then usage; fi

    s=0

    for a in "$@"; do
        shift
        case "$a" in
            -i | -u)
                if [[ $# = 0 ]] ||
                   [[ $s = 1 ]]; then
                    usage
                fi

                s=1

                m=$a
                ;;
            *)
                s=0

                case $m in
                    -i)
                        start_toybox_install "$a" || exit $?
                        ;;
                    -u)
                        start_toybox_uninstall "$a" || exit $?
                        ;;
                    *)
                        usage
                esac

                if [[ $# != 0 ]]; then echo; fi
        esac
    done
}

start "$@" 2> /dev/null
